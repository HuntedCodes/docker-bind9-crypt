// Local zone configuration.

//include "/etc/bind/zones.rfc1918";  // Reserved private ranges.


acl "internals" {
    any;
};


view "internal" {
    match-clients { internals; };

    allow-query { internals; };
    allow-recursion { internals; };

    include "/data/bind/etc/named.conf.forwarders";
    //forward only;  // Ignores local zones, cache, and recursion.

    include "/data/bind/etc/named.conf.default-zones";
};
